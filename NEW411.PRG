SAVE SCREEN TO VTELA_A
DO WHILE .T.
	@ 10,10 CLEAR TO 12,70 
	@ 10,10 TO 12,70 DOUBLE
	VNOME = SPACE(40)
	@ 11,11 SAY "Nome da Empresa: " GET VNOME PICT "@!"
	READ
	IF LASTKEY()=27
		EXIT
	ENDIF
	IF LASTKEY()#27
		GO TOP
		SET PRINTER TO EST
		SET DEVICE TO PRINT
		@ 00,00 SAY DATE()
		@ 00,12 SAY VNOME PICT "@!"
		VTUDO=""
*		CENTRA(00,00,80,VTUDO)
		@ 01,01 SAY REPLICATE("-",80)
		@ 02,01 SAY "Placa   Nome....................................."
		@ 03,01 SAY REPLICATE("-",80)
		X=4
		Q=0
		USE CLIENTE INDEX CLIENTE3
		VNOME = ALLTRIM(VNOME)
		VCOND = "(EMP = ALLTRIM(VNOME) .OR. (' '+ALLTRIM(VNOME)+' ')$(' '+ALLTRIM(EMP)+' '))"
	  	COPY TO LOCV FOR &VCOND
		CLOSE ALL
		USE LOCV
		GO TOP
		DO WHILE .NOT. EOF()
			VNOME  = NOME
			VPLACA = PLACA
			@ X,01 SAY VPLACA
			@ X,09 SAY VNOME
			X=X+2
			Q=Q+1
			SKIP
		ENDDO
		@ X+2,01 SAY "TOTAL DE CLIENTE.."+STR(Q)
		@ X+14,01 SAY ""
		SET DEVICE TO SCREEN 
		SET PRINTER TO 
	ENDIF
   SWPRUNCMD("BROWSE EST.PRN",0,"","")
	SAVE SCREEN TO VTELA_PESQ
		@ 15,20 CLEAR TO 18,50
		@ 15,20 TO 18,50 DOUBLE
		CENTRA(16,20,50,"Deseja Imprimir ?")
		@ 17,25 PROMPT " SIM "
		@ 17,40 PROMPT " NÇO "
		MENU TO VSIM
		IF VSIM = 1
		   SWPRUNCMD("COPY EST.PRN LPT1 /Y",0,"","")
			EJECT
		ENDIF
	RESTORE SCREEN FROM VTELA_PESQ
ENDDO
RESTORE SCREEN FROM VTELA_A
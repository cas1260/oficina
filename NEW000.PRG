FUNCTION OPMSG											&& mensagem p/ menu pop-up

	PARAMETERS VMODO,VPOS,VTECLA
	PRIVATE VRESP
	VKEY = 1
	@ 23,00 SAY SPACE(80)
	CENTRA(23,00,80,VMSG[VPOS])
	DO CASE
		CASE VMODO = 1
			VRESP = 2
			KEYBOARD CHR(30)
				
		CASE VMODO = 2
			VRESP = 2
			KEYBOARD CHR(31)
				
		CASE VMODO = 3
			DO CASE
				CASE LASTKEY() = 13
					VRESP = 1
			
				CASE LASTKEY() = 27
					VRESP = 0
			
				CASE LASTKEY() = 1
					VRESP = 2
					KEYBOARD CHR(31)
				CASE LASTKEY() = 6
               VRESP = 2
               KEYBOARD CHR(30)
                            
           CASE LASTKEY() = 19 
					VRESP = 0
					KEYBOARD CHR(LASTKEY())
			  CASE LASTKEY() = 4
					VRESP = 0
					KEYBOARD CHR(LASTKEY())
				CASE ASCAN(VOPCOES,CHR(LASTKEY())) # 0
					VRESP = 3
					KEYBOARD CHR(13)
				OTHERWISE
					VRESP = 2

			ENDCASE
		CASE LASTKEY()=4
			VOPCAO = VOPCAO + 1
			KEYBOARD CHR(13)
		CASE LASTKEY()=9
			VOPCAO = VOPCAO - 1
			KEYBOARD CHR(13)
		OTHERWISE
			VRESP = 2
				
	ENDCASE
	
	RETURN VRESP

